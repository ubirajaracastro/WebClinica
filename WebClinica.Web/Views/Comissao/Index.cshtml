@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<table id="gridDadosComissao" class="table table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th data-column-id="ComissaoId" data-identifier="true" data-type="numeric">Código</th>
            <th data-column-id="Descricao" data-order="asc">Descrição da Comissão</th> 
            <th data-column-id="NomeConvenio" data-order="asc">Convênio</th>   
            <th data-column-id="NomeProcedimento" data-order="asc">Procedimento</th>
            <th data-column-id="NomeProfissional" data-order="asc">Profissional</th>   
            <th data-column-id="ValorComissao" data-order="asc">Valor</th>          
            <th data-column-id="commands" data-formatter="commands" data-sortable="false">Ação</th>
        </tr>
    </thead>
</table>

<center>
    <p>
        @Html.ActionLink("Cadastrar Nova Comissão", "Novo")
</center>


@section Scripts {
    @Scripts.Render("~/Scripts/Telas/Comissao/index.js")

}
